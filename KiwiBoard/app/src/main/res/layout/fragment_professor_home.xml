        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtlbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtlbl"
        app:layout_constraintTop_toTopOf="@+id/txtlbl" />

    <Button
        android:id="@+id/btnMCquestion"
        android:layout_width="118dp"
        android:layout_height="50dp"
        android:text="Go"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtlbl1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtlbl1"
        app:layout_constraintTop_toTopOf="@+id/txtlbl1" />

    <TextView
        android:id="@+id/txtStuHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="217dp"
        android:text="Professor Home"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txtlbl1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtlbl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txtlbl"
        app:layout_constraintEnd_toStartOf="@+id/btnMCquestion"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStuHome" />

