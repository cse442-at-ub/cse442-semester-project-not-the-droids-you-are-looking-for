    <Button
        android:id="@+id/btnMCquestion3"
        android:layout_width="118dp"
        android:layout_height="50dp"
        android:text="Go"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtlbl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtlbl2"
        app:layout_constraintTop_toTopOf="@+id/txtlbl2" />

    <TextView
        android:id="@+id/txtlbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 2"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txtlbl2"
        app:layout_constraintEnd_toStartOf="@+id/btnMCquestion2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
