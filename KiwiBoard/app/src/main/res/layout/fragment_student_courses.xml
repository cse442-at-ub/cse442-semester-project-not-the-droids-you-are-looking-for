<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F4F4F">

    <TextView
        android:id="@+id/chse_txt"
        android:layout_width="250dp"
        android:layout_height="97dp"
        android:background="@drawable/ic_rounded_corners"
        android:padding="10dp"
        android:text="Choose your course"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="407dp"
        android:layout_height="663dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chse_txt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button14"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/ic_rounded_corners"
                android:padding="10dp"
                android:text="GLY 101: Natural Hazards"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/ic_rounded_corners"
                android:padding="10dp"
                android:text="EAS 360: STEM Communication"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/ic_rounded_corners"
                android:text="CSE 379: Microprocessors"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/ic_rounded_corners"
                android:text="CSE 442: Software Enginnering"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/ic_rounded_corners"
                android:text="CSE 489: Modern Networking Concepts"
                android:textSize="30sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>