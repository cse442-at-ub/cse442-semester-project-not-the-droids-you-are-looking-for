<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F4F4F"
    tools:context=".CreateQuestionFragment">

    <Button
        android:id="@+id/post_btn"
        android:layout_width="159dp"
        android:layout_height="47dp"
        android:layout_marginStart="215dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="37dp"
        android:background="@drawable/ic_rounded_corners"
        android:text="Post"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anwser_input" />

    <ImageView
        android:id="@+id/page_logo"
        android:layout_width="204dp"
        android:layout_height="106dp"
        android:background="@drawable/ic_rounded_corners"
        android:src="@mipmap/ic_launcher_foreground"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/page_title_txt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_add"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/page_title_txt"
        android:layout_width="204dp"
        android:layout_height="86dp"
        android:text="Question Draft:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/page_logo"
        app:layout_constraintTop_toTopOf="@+id/page_logo" />

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="159dp"
        android:layout_height="0dp"
        android:text="Title:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/title_txtinpt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="136dp" />

    <EditText
        android:id="@+id/title_txtinpt"
        android:layout_width="229dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_rounded_corners"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/title_txt"
        app:layout_constraintTop_toTopOf="@+id/title_txt" />

    <TextView
        android:id="@+id/question_txt"
        android:layout_width="159dp"
        android:layout_height="35dp"
        android:text="Question:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/question_write_txtinpt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="211dp" />

    <EditText
        android:id="@+id/question_write_txtinpt"
        android:layout_width="224dp"
        android:layout_height="172dp"
        android:background="@drawable/ic_rounded_corners"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/question_txt"
        app:layout_constraintTop_toTopOf="@+id/question_txt" />

    <TextView
        android:id="@+id/due_date_txt"
        android:layout_width="159dp"
        android:layout_height="38dp"
        android:text="Due Date:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/due_date_inpt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="410dp" />

    <EditText
        android:id="@+id/due_date_inpt"
        android:layout_width="215dp"
        android:layout_height="42dp"
        android:background="@drawable/ic_rounded_corners"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintBottom_toTopOf="@+id/points_inpt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/due_date_txt"
        app:layout_constraintTop_toBottomOf="@+id/question_write_txtinpt" />

    <TextView
        android:id="@+id/points_txt"
        android:layout_width="119dp"
        android:layout_height="34dp"
        android:text="Points:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/points_inpt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="474dp" />

    <EditText
        android:id="@+id/points_inpt"
        android:layout_width="90dp"
        android:layout_height="31dp"
        android:background="@drawable/ic_rounded_corners"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/points_txt"
        app:layout_constraintTop_toTopOf="@+id/points_txt" />

    <TextView
        android:id="@+id/anwser_txt"
        android:layout_width="159dp"
        android:layout_height="38dp"
        android:text="Anwser:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"

        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/anwser_input"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="545dp" />

    <EditText
        android:id="@+id/anwser_input"
        android:layout_width="224dp"
        android:layout_height="172dp"
        android:background="@drawable/ic_rounded_corners"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/anwser_txt"
        app:layout_constraintTop_toTopOf="@+id/anwser_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>