<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/themeColor"
    tools:context=".EditShortAnswer">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profEditSA_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/design_default_color_secondary_variant"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <LinearLayout
            android:id="@+id/linearLayout20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="199dp">

            <TextView
                android:id="@+id/profQuestionBoxLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/themeColor"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/question_box_label"
                android:textColor="@color/White"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txtprofQuestionInputBox"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@drawable/close_cut_corners"
                android:ems="10"
                android:gravity="start|top"
                android:hint="@string/prof_multchoice_questionbox"
                android:inputType="textMultiLine"
                android:padding="2dp" />

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/totalPointsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:text="@string/points_label"
                    android:textColor="@color/White"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/txt_SAtotalPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/White"
                    android:hint="Total"
                    android:inputType="numberDecimal"
                    android:padding="2sp"
                    android:textColor="@color/hintGray"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/profAnswerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/themeColor"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/prof_answer_label"
                android:textColor="@color/White"
                android:textSize="24sp" />



            <EditText
                android:id="@+id/txtprofAnswerBox"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@drawable/close_cut_corners"
                android:ems="10"
                android:gravity="start|top"
                android:hint="@string/prof_SA_answer_questionbox"
                android:inputType="textMultiLine"
                android:padding="2dp" />

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/profeditSASubmitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:background="@drawable/shape_rounded_white_rect"
                android:text="@string/submit_label"
                android:textColor="@color/Black"
                tools:layout_editor_absoluteX="304dp"
                tools:layout_editor_absoluteY="708dp" />

        </FrameLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>