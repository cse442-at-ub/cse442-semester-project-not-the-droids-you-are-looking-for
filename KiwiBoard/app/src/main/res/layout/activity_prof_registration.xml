<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/themeColor"
    android:focusableInTouchMode="true"
    android:gravity="center"
    tools:context=".ProfRegistration">

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/welcomeTextBox"
                style="@style/viewParent"
                android:layout_width="221dp"
                android:layout_height="133dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:width="196dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="@string/student_registration_slogan"
                android:textColor="@color/White"
                android:textSize="39sp"
                android:textStyle="bold"
                android:translationY="8dp" />

            <ImageView
                android:id="@+id/professorLogo"
                android:layout_width="129dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@+id/welcomeTextBox"
                android:background="@color/multChoiceBackground"
                android:src="@drawable/professor_icon" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:translationY="20dp"
            app:cardBackgroundColor="@color/White"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:id="@+id/cardview_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/prof_txt_nameInput"
                    style="@style/parent">

                    <EditText
                        android:id="@+id/editText_name_prof_reg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/themeColor"
                        android:drawableRight="@drawable/ic_person_icon_small"
                        android:hint="@string/text_name_hint"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.503"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.413" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/prof_txt_emailAddress"
                    style="@style/parent">

                    <EditText
                        android:id="@+id/editText_email_address_prof_reg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/themeColor"
                        android:drawableRight="@drawable/ic_email_icon"
                        android:hint="@string/text_email_address_hint"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.503"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.413" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/prof_txt_password"
                    style="@style/parent">

                    <EditText
                        android:id="@+id/editText_password_prof_reg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/themeColor"
                        android:drawableRight="@drawable/ic_password_key"
                        android:hint="@string/text_password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.503"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.413" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/prof_txt_university"
                    style="@style/parent">
                    <EditText
                        android:id="@+id/editText_university_prof_reg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:backgroundTint="@color/themeColor"
                        android:drawableRight="@drawable/ic_university_small"
                        android:hint="University"
                        android:maxLines="1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.503"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.413" />
                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:id="@+id/registerRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:background="@color/White"
                    android:paddingTop="0dp">

                    <Button
                        android:id="@+id/prof_register_button"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/rounded_button"
                        android:text="@string/text_register"
                        android:textColor="@color/White"
                        android:textSize="17sp"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/prof_txt_hasAccount"
                    style="@style/parent"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:clickable="true"
                    android:text="@string/text_login_prompt"
                    android:textAlignment="center"
                    android:textColor="@color/themeColor"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_studentReg"
                    style="@style/parent"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:clickable="true"
                    android:text="@string/text_student_login_prompt"
                    android:textAlignment="center"
                    android:textColor="@color/themeColor"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>