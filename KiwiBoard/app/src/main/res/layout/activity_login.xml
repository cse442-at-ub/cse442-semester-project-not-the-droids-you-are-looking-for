<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/multChoiceBackground"
    tools:context=".Login">


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="135dp"
            android:layout_height="140dp"
            app:srcCompat="@drawable/kiwi" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Login"
            android:textColor="@color/White"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="303dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:layout_constraintVertical_bias="0.237">

        <EditText
            android:id="@+id/forgottenPasswordEmail"
            style="@style/loginField"
            android:layout_width="274dp"
            android:layout_height="42dp"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/PWfield"
            style="@style/loginField"
            android:layout_width="272dp"
            android:layout_height="41dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:translationY="10dp" />

        <Button
            android:id="@+id/forgotPW"
            android:layout_width="134dp"
            android:layout_height="13dp"
            android:background="@color/multChoiceBackground"
            android:onClick="forgotPW"
            android:text="Forgot Password?"
            android:textColor="#ffffffff"
            android:textSize="8sp"
            android:translationY="18dp" />

        <Button
            android:id="@+id/SendEmail"
            android:layout_width="100dp"
            android:layout_height="58dp"
            android:layout_gravity="right"
            android:onClick="loginPassthrough"
            android:text="Sign In"
            android:translationY="10dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>