<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColor"
    tools:context=".StudentRosterFragment">


    <TextView
        android:id="@+id/txtRosterlbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Student Roster"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/lststudent_roster"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="@+id/lststudent_roster"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lststudent_roster"
        android:layout_width="363dp"
        android:layout_height="526dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/ic_rounded_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </ListView>

    <TextView
        android:id="@+id/txtStudentTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:layout_marginEnd="28dp"
        android:text="Student Total:"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lststudent_roster"
        app:layout_constraintEnd_toStartOf="@+id/txtStuTotal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRosterlbl"
        app:layout_constraintVertical_bias="0.506" />

    <TextView
        android:id="@+id/txtStuTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="128dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtStudentTotal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtStudentTotal"
        app:layout_constraintTop_toTopOf="@+id/txtStudentTotal" />


</androidx.constraintlayout.widget.ConstraintLayout>