<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/multChoiceBackground"
    android:textAlignment="center"
    tools:context=".ProfMCQuestionView">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="203dp"
        android:layout_height="128dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/WELCOMETOMARIOKART"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/professor" />

    <TextView
        android:id="@+id/WELCOMETOMARIOKART"
        android:layout_width="147dp"
        android:layout_height="93dp"
        android:text="Question View"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout10"
        app:layout_constraintEnd_toStartOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="409dp"
        android:layout_height="178dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5">

        <TextView

            android:id="@+id/Prof_Quest_View_Desp"
            android:layout_width="409dp"
            android:layout_height="47dp"
            android:text="Question Description"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/Prof_Quest_View_Answers_TextView"
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/ic_rounded_corners"
            android:padding="20dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="404dp"
        android:layout_height="371dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

        <TextView
            android:id="@+id/Prof_Quest_View_Answers"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:padding="10dp"
            android:text="Answers"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="28sp" />

        <ListView
            android:id="@+id/Prof_Quest_View_List"
            android:layout_width="match_parent"
            android:layout_height="316dp"
            android:background="@drawable/ic_rounded_corners" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>