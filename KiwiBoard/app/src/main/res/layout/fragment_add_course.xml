<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F4F4F"
    tools:context=".AddCourseFragment">

    <Button
        android:id="@+id/button"
        android:layout_width="95dp"
        android:layout_height="52dp"
        android:background="@drawable/ic_rectangle"
        android:text="Enroll"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="385dp"
        android:layout_height="554dp"
        android:onClick="switch_to_main"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <Switch
                android:id="@+id/list_switch1"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:background="@drawable/ic_rounded_corners"
                android:text="CSE 489:Modern Networking"

                android:textAlignment="center"
                android:textSize="24dp" />

            <Switch
                android:id="@+id/list_switch2"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:background="@drawable/ic_rounded_corners"
                android:text="EAS 360:STEM Commucation"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Switch
                android:id="@+id/list_switch3"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:background="@drawable/ic_rounded_corners"
                android:text="STA 301:Intro to Probability"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Switch
                android:id="@+id/list_switch4"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:background="@drawable/ic_rounded_corners"
                android:text="CSE 442: Software Enginnering"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Switch
                android:id="@+id/list_switch5"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:background="@drawable/ic_rounded_corners"
                android:text="CSE 379: Intro to Mircoprocessors"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Switch
                android:id="@+id/list_switch6"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:background="@drawable/ic_rounded_corners"
                android:text="CSE 473:Computer Vision"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Switch
                android:id="@+id/list_switch7"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:background="@drawable/ic_rounded_corners"
                android:text="CSE 421: Operating Systems"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Switch
                android:id="@+id/list_switch8"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:background="@drawable/ic_rounded_corners"
                android:text="CSE 331: Intro Algorithms design"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Switch
                android:id="@+id/list_switch9"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:background="@drawable/ic_rounded_corners"
                android:text="CSE 220:Systems Programming"
                android:textAlignment="center"
                android:textSize="24dp" />


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="227dp"
        android:layout_height="107dp"
        android:background="@drawable/ic_rounded_corners"
        android:text="Available Courses"
        android:textAlignment="center"
        android:padding="10dp"
        android:textColor="#2F4F4F"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        tools:layout_editor_absoluteX="432dp" />

</androidx.constraintlayout.widget.ConstraintLayout>